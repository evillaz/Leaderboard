{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "import/no-import-module-exports" : "off",
      "prefer-destructuring" : "off"
    },
    "ignorePatterns": [
      "dist/",
      "build/",
      "__tests__/",
      "__mocks__/",
      "*webpack*"
    ]
}
